#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
      int e;
    scanf("%d",&e);
    if(e<=200)
    {
        e=0.5*e;
    }
    else if(e<=400)
    {
         e=0.65*e+100;
    }
    else if(e<600)
    {
         e=0.80*e+200;
    }
    else
    {
         e=1.25*e+425;
    }
    
    printf("Rs.%d",e);
    
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
