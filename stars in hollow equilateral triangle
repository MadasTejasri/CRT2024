#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
  int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        for(int k=i;k<=n-1;k++)
        {
            printf(" ");
        }
        for(int j=1;j<=i;j++)
        {
            if(j==1||i==n||j==i)
            {
                printf("* ");
            }
            else
            { 
                printf("  ");
            }
        }
        printf("\n");
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
