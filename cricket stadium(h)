#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int l,b;
    scanf("%d %d",&l,&b);
    int perimeter=2*(l+b);
    int area=l*b;
    printf("%d\n%d",perimeter,area);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
