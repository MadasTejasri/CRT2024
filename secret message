#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
         char str[100];
    scanf("%[^\n]s",str);
    int i,c=0;
    for(i=0;str[i]!='\0';i++)
    {
        if(!((str[i]>=65) && (str[i]<=90)||(str[i]>=97) && (str[i]<=122) || (str[i]>=48) && (str[i]<=57) || str[i]==32))
            c++;
    }
    printf("%d",c);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
